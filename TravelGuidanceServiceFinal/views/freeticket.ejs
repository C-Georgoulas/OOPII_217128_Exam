<div class="ui main text container segment">
    <h2 class="ui center aligned icon header">
      <i class="ticket alternate icon"></i>
    </h2>
    <div class="five wide field">
    </div>
    <table id="table" class="ui compact celled definition table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Age</th>
            <th>Current City</th>
            <th>Suggested Destination</th>
            <th>Prefered Cities</th>
          </tr>
        </thead>
        <tbody id="Table1">
          <form class="ui form" action="/freeticketwinner" method="POST">
            <% for (var i = 0; i < data.length; i++) { %>
                <td class="collapsing">
                  <div class="ui checkbox">
                    <input type="checkbox" name="type" value="<%= data[i].id%>"> <label></label>
                  </div>
                </td>
                <td style="display:none;" ><%= data[i].id %></td>
                <td><%= data[i].name%></td>
                <td><%= data[i].age%></td>
                <td><%= data[i].city%></td>
                <td><%= data[i].visit%></td>
                <td  ><%= data[i].preferedCities %></td>   <!--need it to be display none-->
              <tr>
              <% } %>
            </tr>
              </div>
            </td>
        </tbody>
        <tfoot class="full-width">
          <tr>
            <th></th>
            <th colspan="4">  
                  <div class="five wide field">
                  <label>Choose the destination:</label>
                <input id="currentCity" type="text" onkeyup="myFunction()" name="candidateCity" placeholder="E.g Athens,GR">
                </div>
                <button class="ui small button" id="winnerButton" type="submit" > Draw winner </button> <!--SOS θελω να καλω την frre ticket winner με το array των checked boxes και να μου στελνεις τη πολη-->
                </form>
              </div>
            </th>
          </tr>
        </tfoot>
      </table>
</div>
 
